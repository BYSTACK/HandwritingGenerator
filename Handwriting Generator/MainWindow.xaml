<Window x:Class="Handwriting_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Handwriting_Generator"
        mc:Ignorable="d"
        Title="Handwritten text generator" Height="180" Width="300">
    <DockPanel LastChildFill="False">
        <Button DockPanel.Dock="Top" Margin="10" Height="50" Click="OpenFontEditor">Font Creator/Editor</Button>
        <Button DockPanel.Dock="Bottom" Margin="10" Height="50" Click="OpenTextRenderer">Handwritten text renderer</Button>
    </DockPanel>
</Window>
